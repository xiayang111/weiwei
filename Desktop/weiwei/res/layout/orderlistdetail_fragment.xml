<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WeiWeiBaseBackgroundStyle"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_default_10"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/ll_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_default_60"
                android:layout_marginLeft="@dimen/dp_default_5"
                android:layout_marginRight="@dimen/dp_default_5"
                android:background="@drawable/weiwei_base_text_bg"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_order_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_default_10"
                    android:gravity="center_vertical"
                    android:text="已经付款"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_default_18" />

                <Button
                    android:id="@+id/bt_right"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_default_40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp_default_10"
                    android:layout_marginRight="@dimen/dp_default_10"
                    android:background="@drawable/weiwei_button_green"
                    android:focusable="true"
                    android:padding="@dimen/dp_default_10"
                    android:text="订单评价"
                    android:textColor="#8fc320"
                    android:textSize="@dimen/sp_default_14"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_state"
                android:layout_marginLeft="@dimen/dp_default_5"
                android:layout_marginRight="@dimen/dp_default_5"
                android:layout_marginTop="@dimen/dp_default_10"
                android:background="@drawable/weiwei_base_text_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_default_10"
                    android:paddingBottom="@dimen/dp_default_5"
                    android:paddingTop="@dimen/dp_default_5"
                    android:text="联系人信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_default_20" />

                <View style="@style/WeiWeiContentBorderStyle" />

              

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_default_10"
                    android:layout_marginTop="@dimen/dp_default_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_default_5"
                    android:paddingRight="@dimen/dp_default_5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货姓名:"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_default_16" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_default_10"
                        android:textColor="#7c7c7c"
                        android:textSize="@dimen/sp_default_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_default_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_default_5"
                    android:paddingRight="@dimen/dp_default_5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话:"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_default_16" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_default_10"
                        android:textColor="#7c7c7c"
                        android:textSize="@dimen/sp_default_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_default_10"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_default_5"
                    android:paddingRight="@dimen/dp_default_5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址:"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_default_16" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_default_10"
                        android:text="武汉市洪山区楚天激光大厦"
                        android:textColor="#7c7c7c"
                        android:textSize="@dimen/sp_default_16" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_detail"
                android:layout_marginLeft="@dimen/dp_default_5"
                android:layout_marginRight="@dimen/dp_default_5"
                android:layout_marginTop="@dimen/dp_default_10"
                android:background="@drawable/weiwei_base_text_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_default_10"
                    android:paddingBottom="@dimen/dp_default_5"
                    android:paddingTop="@dimen/dp_default_5"
                    android:text="配送信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_default_20" />

                <View style="@style/WeiWeiContentBorderStyle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_default_10"
                    android:layout_marginTop="@dimen/dp_default_5"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_default_5"
                    android:paddingRight="@dimen/dp_default_5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号:"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_default_16" />

                    <TextView
                        android:id="@+id/tv_ordernum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_default_10"
                        android:textColor="#7c7c7c"
                        android:textSize="@dimen/sp_default_16" />
                </LinearLayout>
				 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_default_10"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_default_5"
                    android:paddingRight="@dimen/dp_default_5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送方式:"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_default_16" />

                    <TextView
                        android:id="@+id/tv_sendtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_default_10"
                        android:textColor="#7c7c7c"
                        android:textSize="@dimen/sp_default_16" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_default_10"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_default_5"
                    android:paddingRight="@dimen/dp_default_5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送时间:"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_default_16" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_default_10"
                        android:textColor="#7c7c7c"
                        android:textSize="@dimen/sp_default_16" />
                </LinearLayout>

                <View style="@style/WeiWeiContentBorderStyleNew" />

                <com.dongwukj.weiwei.ui.widget.MaxListView
                    android:id="@+id/lv_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" >
                </com.dongwukj.weiwei.ui.widget.MaxListView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_send"
                android:layout_marginLeft="@dimen/dp_default_5"
                android:layout_marginRight="@dimen/dp_default_5"
                android:layout_marginTop="@dimen/dp_default_10"
                android:background="@drawable/weiwei_base_text_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_default_10"
                        android:paddingBottom="@dimen/dp_default_5"
                        android:paddingTop="@dimen/dp_default_5"
                        android:text="商品列表"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_default_20" />

                    <TextView
                        android:id="@+id/goodsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_default_10"
                        android:layout_marginRight="@dimen/dp_default_5"
                        android:layout_toRightOf="@id/tv_product"
                        android:paddingBottom="@dimen/dp_default_5"
                        android:paddingTop="@dimen/dp_default_5"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_default_16" />
                </RelativeLayout>

                <View style="@style/WeiWeiContentBorderStyle" />

                <com.dongwukj.weiwei.ui.widget.MyListView
                    xmlns:mode="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@color/transparent"
                    android:focusable="false"
                    android:listSelector="@color/transparent"
                    android:scrollbars="none"
                    mode:layoutMode="stretch" >
                </com.dongwukj.weiwei.ui.widget.MyListView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_default_10"
                android:layout_below="@id/ll_list"
                android:background="@color/transparent" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_default_30"
        android:layout_marginTop="@dimen/dp_default_3"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_default_10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="商品金额:"
                android:textColor="#7c7c7c" />

            <TextView
                android:id="@+id/tv_shopprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_default_5"
                android:gravity="center"
                 android:textSize="@dimen/sp_default_14"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="满减:"
                 android:textSize="@dimen/sp_default_14"
                android:textColor="#7c7c7c" />

            <TextView
                android:id="@+id/tv_full_cut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_default_5"
                android:gravity="center"
                android:text="0.00"
                 android:textSize="@dimen/sp_default_14"
                android:textColor="@color/green" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_default_30"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_default_10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="运费:"
                android:textSize="@dimen/sp_default_14"
                android:textColor="#7c7c7c" />

            <TextView
                android:id="@+id/tv_freight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.00"
                 android:textSize="@dimen/sp_default_14"
                android:textColor="@color/oragne" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="优惠劵:"
                 android:textSize="@dimen/sp_default_14"
                android:textColor="#7c7c7c" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_default_5"
                android:gravity="center"
                android:text="0.00"
                 android:textSize="@dimen/sp_default_14"
                android:textColor="@color/green" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_discount_balance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_default_30"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_default_10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="折扣（余额支付）："
                 android:textSize="@dimen/sp_default_14"
                android:textColor="#7c7c7c" />

            <TextView
                android:id="@+id/tv_discount_balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_default_5"
                android:gravity="center"
                android:text="￥0.00"
                 android:textSize="@dimen/sp_default_14"
                android:textColor="@color/green" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_rebate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_default_50"
        android:layout_marginTop="@dimen/dp_default_3"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_default_10" >

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                 android:textSize="@dimen/sp_default_14"
                android:text="实付金额（含运费）:"
                android:textColor="#7c7c7c" />

            <TextView
                android:id="@+id/tv_realprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_default_3"
                android:gravity="center"
                android:text="￥49990.0"
                 android:textSize="@dimen/sp_default_14"
                android:textColor="@color/red"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rebate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_default_10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返款:"
                 android:textSize="@dimen/sp_default_14"
                android:textColor="#7c7c7c" />

            <TextView
                android:id="@+id/tv_fankuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_default_10"
                android:gravity="center"
                android:text="￥10.0"
                 android:textSize="@dimen/sp_default_14"
                android:textColor="@color/red"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>