<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textview_middle"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_marginTop="@dimen/dp_default_25"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="确认登录"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_default_30" />
    <!-- <View style="@style/WeiWeiContentBorderStyle"/> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal" 
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_default_25"
        >

        <Button
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_default_50"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_default_20"
            android:textSize="@dimen/sp_default_18"
            android:background="@drawable/weiwei_yellow_button"
            android:textColor="@color/white"
            android:text="确定" />

        <TextView
            android:layout_marginRight="@dimen/dp_default_10"
            android:layout_marginLeft="@dimen/dp_default_10"
            android:layout_width="@dimen/dp_default_1"
            android:layout_height="@dimen/dp_default_52"
            android:background="@color/weiwei_content_border_color" />

        <Button
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_default_50"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_default_20"
            android:textSize="@dimen/sp_default_18"
            android:textColor="@color/white"
            android:background="@drawable/weiwei_enabled_false"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>