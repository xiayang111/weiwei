<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/weiwei_combo_gridview_item"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/combo_item_image_height"
        android:padding="@dimen/combo_item_image_padding"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/combo_item_ll_margin_left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pro_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#191919"
            android:textSize="@dimen/combo_item_name_size" />

       <!--  <TextView
            android:id="@+id/pro_describe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="1dp"
            android:textColor="@color/right_category_text_color"
            android:textSize="@dimen/combo_item_description_text_size" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/combo_item_bottom_ll_marginBottom"
            android:layout_weight="1.2"
             >

            <TextView
                android:id="@+id/pro_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
              	android:textColor="@color/orange_color"
                android:gravity="center_vertical"
                android:textSize="@dimen/combo_item_name_size" />

            <TextView
                android:id="@+id/old_price"
               android:layout_weight="1"
               android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/right_category_text_color"
                android:textSize="@dimen/combo_item_description_text_size" />

            <ImageView
                android:id="@+id/img_buy"
                android:focusable="false"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/combo_item_image_cart_marginRight"
                android:background="@drawable/weiwei_gouwuche_checked" 
                android:paddingBottom="3dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>