<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WeiWeiBaseBackgroundStyle"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weiwei_content_border_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rd_undone"
                style="@style/WeiWeiOrderListRadio"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/red_tab_seletor"
                android:checked="true"
                android:text="正在交易订单"
                android:textColor="@color/message_title_radio_text_color" />

            <RadioButton
                android:id="@+id/rd_complete"
                style="@style/WeiWeiOrderListRadio"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/red_tab_seletor"
                android:checked="false"
                android:text="交易完成订单"
                android:textColor="@color/message_title_radio_text_color" />

            <!--
                 <RadioButton
                    android:id="@+id/rd_complete"
                    android:text="交易完成订单"
                    style="@style/WeiWeiOrderListRadio"
                    android:background="@drawable/red_tab_seletor"
                    android:checked="false"
                    />
            -->
        </RadioGroup>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/weiwei_content_item_divider_color" />
    </RelativeLayout>

    <View style="@style/WeiWeiContentBorderStyle" />

    <LinearLayout
        android:id="@+id/ll_state"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >
		<RadioGroup 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    >
        <RadioButton
            android:id="@+id/state_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/message_title_radio_text_color"
            android:background="@null"
            android:checked="true"
            
            />

        <RadioButton
            android:id="@+id/state_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/message_title_radio_text_color"
           android:background="@null"
            
            />

        <RadioButton
            android:id="@+id/state_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/message_title_radio_text_color"
           android:background="@null"
               />

        <RadioButton
            android:id="@+id/state_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textSize="12sp"
            android:textColor="@color/message_title_radio_text_color"
android:background="@null"
              />
        </RadioGroup>
    </LinearLayout>
	<LinearLayout
        android:id="@+id/ll_state_complete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" 
        android:visibility="gone">
<RadioGroup 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    >
        <RadioButton
            android:id="@+id/state_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="代付款\n1" 
            android:textSize="12sp"
            android:checked="true"
            android:textColor="@color/message_title_radio_text_color"
            android:background="@null"
           />

        <RadioButton
            android:id="@+id/state_5"
           android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="代付款\n1" 
            android:textSize="12sp"
            android:textColor="@color/message_title_radio_text_color"
            android:background="@null"
           />
           </RadioGroup>
    </LinearLayout>
    
    <View style="@style/WeiWeiContentBorderStyle" />

    <View
        style="@style/WeiWeiContentBorderStyle"
        android:layout_marginTop="10dp" />

    <FrameLayout
        android:id="@+id/fm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@color/weiwei_content_background_color" />

</LinearLayout>