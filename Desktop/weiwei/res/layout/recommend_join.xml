    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/weiwei_recommend_join" />

        <TextView
            android:id="@+id/tv_recom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="即日起到12月31日,推荐新用户亲友到惟惟,\n凡亲友在惟惟APP上成功购买商品,即可获得\n1000惟惟积分."
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="#4b4b4b"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_more_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:padding="5dp"
            android:text="更多详情\n      ︾"
            android:textColor="#ff4e00" />

        <TextView
            android:id="@+id/tv_go_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="即日起到12月31日,推荐新用户亲友到惟惟,\n凡亲友在惟惟APP上成功购买商品,即可获得\n1000惟惟积分."
            android:textSize="15sp"
            android:textColor="#4b4b4b"
            android:visibility="gone" />

		<TextView 
		    android:id="@+id/tv_back"
		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="#ff4e00"
            android:text="      ︽\n返回上层"
            android:visibility="gone"
		    />
    </LinearLayout>

            <Button
            android:id="@+id/btn_share"
            android:layout_width="260dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/weiwei_yellow_button"
            android:text="一键分享"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp" 
            
            />
    
    
    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:layout_marginTop="6dp"
        android:background="#FFE384"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="#FF6100"
            android:gravity="center"
            android:text="输 入 口 令"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_word"
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFCD" >

            <EditText
                android:id="@+id/et_word"
                android:layout_width="155dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:background="@android:drawable/edit_text"
                android:hint="请输入口令得积分" 
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="22dp"
                />
        </RelativeLayout>
        <Button 
            android:id="@+id/btn_wancheng"
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:text="完    成"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:background="@color/orange"
            />
        
    </LinearLayout>
</LinearLayout>

</ScrollView>