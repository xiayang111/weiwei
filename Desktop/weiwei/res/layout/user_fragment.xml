<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layout_bg"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/weiwei_login_background_img"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_default_30"
                android:layout_marginTop="@dimen/dp_default_14" >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="我的惟惟"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_default_20" />

                <ImageView
                    android:id="@+id/my_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_default_10"
                    android:src="@drawable/weiwei_my_weiwei_seting" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_default_30"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_default_54"
                    android:layout_gravity="center"
                    android:src="@drawable/weiwei_unlogin_icon" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_default_10" >

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="易木厨房"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_default_18"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_default_20"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_default_5"
                        android:layout_toRightOf="@id/tv_username"
                        android:background="@drawable/weiwei_yellow_button"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_default_10"
                        android:paddingRight="@dimen/dp_default_10"
                        android:text="V"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_default_12"
                        android:textStyle="italic"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/bt_login"
                        android:layout_width="@dimen/dp_default_82"
                        android:layout_height="@dimen/dp_default_26"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/dp_default_5"
                        android:background="@drawable/weiwei_border_unlogin_button"
                        android:text="登录 | 注册"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_default_12"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/dp_default_20"
                    android:background="@color/transparent_white"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_waitpay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="未完成订单"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_default_14" />

                    <View
                        android:layout_width="@dimen/dp_default_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_default_3"
                        android:layout_marginTop="@dimen/dp_default_3"
                        android:background="@color/white" />
                    <!--
                    <TextView
                            android:id="@+id/tv_waitsend"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="待发货"
                            android:gravity="center"
                            android:textColor="@color/white"
                            />
                    <View
                            android:layout_width="@dimen/dp_default_1"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/dp_default_3"
                            android:layout_marginBottom="@dimen/dp_default_3"
                            />
                    -->

                    <TextView
                        android:id="@+id/tv_waitreceive"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="已完成订单"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_default_14" />

                    <View
                        android:layout_width="@dimen/dp_default_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp_default_3"
                        android:layout_marginTop="@dimen/dp_default_3"
                        android:background="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_evaluate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="待评价订单"
                        android:textColor="@color/white"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_default_5"
            android:background="@drawable/weiwei_base_text_bg"
            android:orientation="vertical" >

            <LinearLayout style="@style/WeiWeiCenterLinearItemStyleNew" >

                <ImageView
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/weiwei_my_weiwei_order" />

                <RelativeLayout
                    android:id="@+id/rl_orderlist"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="全部订单"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_default_14" />

                    <TextView
                        android:id="@+id/tv_order_count"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="@dimen/dp_default_10"
                        android:layout_toLeftOf="@+id/img_back"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#808080" />

                    <ImageView
                        android:id="@id/img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_default_0.5"
                android:layout_alignParentBottom="true"
                android:background="#f0f0f0" />

            <LinearLayout
                android:id="@+id/ll_unline_pay"
                style="@style/WeiWeiCenterLinearItemStyleNew" >

                <ImageView
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/unline_pay" />

                <RelativeLayout
                    android:id="@+id/rl_unline_pay"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:id="@+id/tv_unline_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="线下支付"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_default_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_default_0.5"
                android:layout_alignParentBottom="true"
                android:background="#f0f0f0" />

            <LinearLayout style="@style/WeiWeiCenterLinearItemStyleNew" >

                <ImageView
                    android:id="@+id/purse"
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/weiwei_my_weiwei_purse" />

                <RelativeLayout
                    android:id="@+id/rl_purse"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="我的钱包"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_default_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="@dimen/dp_default_10"
                        android:layout_toLeftOf="@+id/my_wallet_img_back"
                        android:gravity="center_vertical"
                        android:text="优惠券"
                        android:textColor="#808080" />

                    <ImageView
                        android:id="@+id/my_wallet_img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_default_0.5"
                android:layout_alignParentBottom="true"
                android:background="#f0f0f0" />

            <LinearLayout
                style="@style/WeiWeiCenterLinearItemStyleNew"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/weiwei_my_weiwei_attention" />

                <RelativeLayout
                    android:id="@+id/rl_attention"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="我的关注"
                        android:textColor="#808080" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_default_0.5"
                        android:layout_alignParentBottom="true"
                        android:background="#f0f0f0" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout style="@style/WeiWeiCenterLinearItemStyleNew" >

                <ImageView
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/weiwei_my_weiwei_vip_card" />

                <RelativeLayout
                    android:id="@+id/rl_recharge"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="充值中心"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_default_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_default_0.5"
                android:layout_alignParentBottom="true"
                android:background="#f0f0f0" />

            <LinearLayout style="@style/WeiWeiCenterLinearItemStyleNew" >

                <ImageView
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/weiwei_my_weiwei_message" />

                <RelativeLayout
                    android:id="@+id/rl_message"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="我的消息"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_default_14" />

                    <TextView
                        android:id="@+id/has_message"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="@dimen/dp_default_10"
                        android:layout_toLeftOf="@+id/message_img_back"
                        android:gravity="center_vertical"
                        android:text="•"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_default_24"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/message_img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp_default_5"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="@dimen/dp_default_1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/order" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:text="评论"
                    android:textColor="#808080"
                    android:textSize="@dimen/sp_default_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_default_5"
                    android:src="@drawable/back" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_default_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="#f0f0f0" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_default_5"
            android:background="@drawable/weiwei_base_text_bg"
            android:orientation="vertical" >

            <LinearLayout style="@style/WeiWeiCenterLinearItemStyleNew" >

                <ImageView
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/weiwei_my_weiwei_address" />

                <RelativeLayout
                    android:id="@+id/rl_address"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="我的地址"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_default_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_default_0.5"
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/WeiWeiCenterLinearItemStyleNew"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/weiwei_my_weiwei_footprint" />

                <RelativeLayout
                    android:id="@+id/rl_footprint"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="我的足迹"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_default_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_default_0.5"
                android:background="#f0f0f0" />

            <Button
                android:id="@+id/bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出"
                android:visibility="gone" />

            <LinearLayout style="@style/WeiWeiCenterLinearItemStyleNew" >

                <ImageView
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/zhanghaoanquan" />

                <RelativeLayout
                    android:id="@+id/rl_usersafety"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="账号安全"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_default_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_default_0.5"
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_default_0.5"
                android:background="#f0f0f0" />

            <LinearLayout style="@style/WeiWeiCenterLinearItemStyleNew" >

                <ImageView
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/lianxikefu" />

                <RelativeLayout
                    android:id="@+id/rl_lianxikefu"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="联系客服（027-87776107）"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_default_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="@dimen/dp_default_10"
                        android:layout_toLeftOf="@+id/my_wallet_img_back1"
                        android:gravity="center_vertical"
                        android:text="拨打"
                        android:textColor="#808080" />

                    <ImageView
                        android:id="@+id/my_wallet_img_back1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_default_0.5"
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_default_0.5"
                android:background="#f0f0f0" />

            <LinearLayout style="@style/WeiWeiCenterLinearItemStyleNew" >

                <ImageView
                    android:layout_width="@dimen/dp_default_1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/saomiao" />

                <RelativeLayout
                    android:id="@+id/rl_chaxun"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="6" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="溯源查询"
                        android:textColor="#808080"
                        android:textSize="@dimen/sp_default_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_default_20"
                        android:src="@drawable/back" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_default_0.5"
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/darker_gray"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>