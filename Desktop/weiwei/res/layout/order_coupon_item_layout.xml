<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WeiWeiContentBackgroundStyle"
    android:orientation="horizontal" 
    android:paddingRight="@dimen/dp_default_10"
    android:paddingBottom="@dimen/dp_default_5"
    android:paddingTop="@dimen/dp_default_5"
    android:descendantFocusability="blocksDescendants">
	
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_default_80"
        android:layout_weight="1.5"

		android:background="@drawable/weiwei_coupon_green"
        android:orientation="vertical" >
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="0.5"
		    android:orientation="horizontal"
		    >
		     <TextView
		         android:paddingLeft="@dimen/dp_default_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="惟惟"
            android:textSize="@dimen/sp_default_12"
            android:textColor="@color/white"
            android:textStyle="bold" /> 
             <TextView
                 android:id="@+id/tv_overlay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="@dimen/sp_default_12"
            android:textColor="@color/white"
            android:textStyle="bold" /> 
		</LinearLayout>
       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:gravity="center_horizontal" >
			
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:gravity="center"
                android:text="￥5"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_default_20" 
                android:textStyle="bold"
               	/>

          
        </LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    >
		    <TextView
            android:id="@+id/tv_order_amountlower"
            android:layout_width="match_parent"
            android:layout_height="0dp"
           
            android:layout_weight="1"
            android:gravity="center"
           	android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_default_8"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
           	android:layout_weight="1"
            android:gravity="center"
            
            android:textColor="@color/white"
            android:textSize="@dimen/sp_default_8"
            android:textStyle="bold" />
		</LinearLayout>
        

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_default_80"
       android:gravity="center_vertical"
        android:layout_weight="1"
        >
		
	<CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/dp_default_25"
            android:layout_height="@dimen/dp_default_25"
            android:focusable="false"
            android:clickable="false"
            android:button="@null"
            android:layout_marginRight="@dimen/dp_default_10"
            android:background="@drawable/weiwei_paylist_check_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</LinearLayout>