<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_default_252"
    android:layout_height="@dimen/dp_default_70"
    android:background="@drawable/textview_middle"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="是否确定退出当前账户？"
        android:textStyle="normal"
        android:textColor="@color/left_category_text_color"
        android:textSize="@dimen/sp_default_18" />

    <View style="@style/WeiWeiContentBorderStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_default_16" 
            android:textColor="@color/dialog_queren"
            android:text="取消" />

        <TextView
            android:layout_width="@dimen/dp_default_1"
            android:layout_height="match_parent"
            android:background="@color/weiwei_content_border_color" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_default_16" 
            android:textColor="@color/dialog_queren"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>