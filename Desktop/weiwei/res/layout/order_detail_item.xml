<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/parent_cart_list_item_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_default_60"
        android:layout_marginBottom="@dimen/dp_default_10"
        android:layout_marginTop="@dimen/dp_default_10"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/parent_cart_list_item_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_default_12"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dp_default_60"
                android:layout_height="@dimen/dp_default_60"
                android:scaleType="fitXY"
                android:src="@drawable/default_small" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_default_5" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_default_16"
                    android:text="菠菜" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#7c7c7c"
                        android:textSize="@dimen/sp_default_14"
                        android:text="总量:1000g" />

                    <TextView
                        android:id="@+id/tv_realweight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                         android:textSize="@dimen/sp_default_14"
                          android:textColor="#7c7c7c"
                        android:text="总量:1000g" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                         android:textSize="@dimen/sp_default_14"
                          android:textColor="#7c7c7c"
                        android:text="预付金额:10" />

                    <TextView
                        android:id="@+id/tv_rebateamount"
                        android:layout_width="0dp"
                         android:textSize="@dimen/sp_default_14"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                          android:textColor="#7c7c7c"
                        android:text="预付金额:10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
	
</LinearLayout>