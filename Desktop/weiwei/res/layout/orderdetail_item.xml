<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="@drawable/weiwei_base_text_bg"
    android:paddingLeft="@dimen/dp_default_10" >
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_default_90" >

        <ImageView
            android:id="@+id/iv_ordericon"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_default_75"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/default_small" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_default_75"
            android:layout_weight="3"
            android:orientation="vertical" 
            android:layout_marginLeft="@dimen/dp_default_5"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_ordername"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
               
                android:textSize="@dimen/sp_default_18"
                android:textColor="@color/black"/>
			  <TextView
                android:id="@+id/tv_weight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                
                android:textSize="@dimen/sp_default_14" 
                android:textColor="@color/darkgray"/>
			
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_orderprice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_default_5"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_default_16" />

                <TextView
                    android:id="@+id/tv_buycount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="@dimen/dp_default_15"
                    android:gravity="center_vertical"
                    android:text="x1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_default_16"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
	<View style="@style/WeiWeiContentBorderStyle" />
</LinearLayout>