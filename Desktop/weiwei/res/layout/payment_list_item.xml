<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_default_60"
             android:minHeight="@dimen/dp_default_60"
              android:background="@drawable/weiwei_base_text_bg"
         >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="@dimen/dp_default_60"
            android:orientation="horizontal"
            android:padding="@dimen/dp_default_10">
            <ImageView
            android:id="@+id/payment_list_item_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/weiwei_pay_yinglian"/>
            <RelativeLayout 
                  android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
                >
                 <TextView
            android:id="@+id/payment_list_item_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="支付宝支付"
            android:textSize="@dimen/sp_default_20"
            android:textColor="#191919"
            android:layout_marginLeft="@dimen/dp_default_10"
            android:gravity="center_vertical"
            />
                   <TextView
           android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_default_16"
            android:textColor="@color/red"
            android:text="￥4.00"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_default_10"
            android:visibility="gone"
            />  
            </RelativeLayout>
   
    <CheckBox
            android:id="@+id/payment_list_item_check"
            android:layout_width="@dimen/dp_default_25"
            android:layout_height="@dimen/dp_default_25"
            android:focusable="false"
            android:clickable="false"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:background="@drawable/weiwei_paylist_check_selector"
            />
        </LinearLayout>
    
</LinearLayout>