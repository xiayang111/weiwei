<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:descendantFocusability="blocksDescendants" android:layout_width="fill_parent"
              style="@style/title_bar_bg_style"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/product_detail_btn_titletop" android:layout_centerVertical="true"
               style="@style/app_title_left_button_style"/>
    <TextView android:textSize="@dimen/app_title_size" android:textColor="@color/app_title_dark" android:ellipsize="end"
              android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/brandName"
              android:layout_width="0.0dip" android:layout_height="fill_parent" android:singleLine="true"
              android:layout_weight="1.0"/>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/share" android:visibility="visible"
               android:layout_width="24.0dip" android:layout_height="24.0dip"
               android:layout_marginLeft="@dimen/app_title_icon_padding_right"
               android:layout_marginRight="@dimen/detail_lr_padding" android:src="@drawable/btn_share_selector"
               android:scaleType="centerInside" android:layout_centerVertical="true"/>
</LinearLayout>