<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    style="@style/WeiWeiBaseBackgroundStyle"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_default_60"
        android:layout_height="@dimen/dp_default_60"
        android:layout_centerInParent="true" />
	
    <LinearLayout
        android:id="@+id/cart_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_default_100"
        android:layout_alignParentBottom="true"
        android:background="@color/weiwei_content_background_color"
        android:orientation="vertical"
        android:visibility="visible" >
	<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_default_1"
            android:layout_alignParentTop="true"
            android:background="@color/weiwei_content_border_color" />
        <RelativeLayout
            android:id="@+id/cart_image_rl"
            android:layout_width="@dimen/dp_default_70"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:visibility="gone" >

            <!--
                <ImageView
                    android:id="@+id/cart_image"
                    android:layout_width="@dimen/dp_default_46"
                    android:layout_height="3@dimen/dp_default_3"
                    android:src="@drawable/weiwei_gouwuche_checked"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_default_20"
                    />
            -->

            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="@dimen/dp_default_50"
                android:layout_height="@dimen/dp_default_50"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/dp_default_1"
                android:src="@drawable/weiwei_gouwuche_checked" />
        </RelativeLayout>

        <Button
            android:id="@+id/addCartButton"
            style="@style/WeiWeiBaseYellowButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_default_46"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_default_10"
            android:paddingLeft="@dimen/dp_default_10"
            android:paddingRight="@dimen/dp_default_10"
            android:visibility="gone"
            android:text="加入购物车" />
        <RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="0dp"
			   android:layout_weight="1"
			    android:layout_marginRight="@dimen/dp_default_10"
               >
               <CheckBox 
                   android:id="@+id/nomain_weight"
                   android:text="200g"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_default_14"
                   android:button="@null"
                   android:paddingTop="@dimen/dp_default_5"
                   android:paddingBottom="@dimen/dp_default_5"
                   android:gravity="center"
                   android:layout_alignParentRight="true"
                   android:background="@drawable/weiwei_seletor_weight_check"
                   />
               <CheckBox 
                   android:id="@+id/main_weight"
                   android:text="200g"
                   android:checked="true"
                   android:layout_toLeftOf="@id/nomain_weight"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_default_14"
                   android:button="@null"
                   android:paddingTop="@dimen/dp_default_5"
                   android:paddingBottom="@dimen/dp_default_5"
                   android:gravity="center"
                   android:layout_marginRight="@dimen/dp_default_5"
                   android:background="@drawable/weiwei_seletor_weight_check"
                   />
               <TextView 
                   android:layout_toLeftOf="@id/main_weight"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sp_default_14"
                   android:text="选择规格："
                   android:layout_centerVertical="true"
                   android:layout_marginRight="@dimen/dp_default_5"
                   />
               
                </RelativeLayout>
                <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_default_1"
            android:layout_alignParentTop="true"
            android:background="@color/weiwei_content_border_color" />
        <RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="0dp"
			   android:layout_weight="1"
			    android:layout_marginRight="@dimen/dp_default_10"
               >
                
            <LinearLayout 
                android:id="@+id/ll_total"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_default_10"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价："
                    android:textSize="@dimen/sp_default_12"
                    />
                <TextView 
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥15.0"
                    android:textSize="@dimen/sp_default_14"
                    android:textColor="@color/red"
                    />
            </LinearLayout>
            
                 <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/tv_jian"
                android:layout_width="@dimen/dp_default_25"
                android:layout_height="@dimen/dp_default_25"
                android:layout_marginRight="@dimen/dp_default_5"
                android:background="@drawable/weiwei_jian"
                android:gravity="center"
                 android:textColor="@color/white"
                android:textSize="@dimen/sp_default_25" />

             <TextView
                   	android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                	android:layout_gravity="top"
                    android:textSize="@dimen/sp_default_14" 
                    android:minEms="3"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_default_5"/>
 			<TextView
                   	android:id="@+id/tv_total_weigth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                	android:layout_gravity="top"
                    android:textSize="@dimen/sp_default_14" 
                    android:minEms="3"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_default_5"/>		
            <TextView
                android:id="@+id/tv_jia"
                android:layout_width="@dimen/dp_default_25"
                android:layout_height="@dimen/dp_default_25"
                android:layout_marginRight="@dimen/dp_default_5"
                android:background="@drawable/weiwei_jia"
                android:gravity="center"
               android:textColor="@color/white"
                android:textSize="@dimen/sp_default_25" />
            <TextView
                	android:id="@+id/weight_unittwo"
                   	android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="克"
                	android:layout_gravity="top"
                    android:textSize="@dimen/sp_default_14" 
                    android:gravity="center"
                              android:textColor="#7c7c7c"
                    android:layout_marginRight="@dimen/dp_default_5"/>
        </LinearLayout>
                </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_default_10"
            android:layout_toLeftOf="@id/addCartButton"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="距结束还剩 :"
                android:textColor="@color/black"
                android:textSize="@dimen/rush_purchase" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1天6:25:05"
                android:textColor="@color/red"
                android:textSize="@dimen/rush_purchase" />
        </LinearLayout>

        
    </LinearLayout>

    <com.dongwukj.weiwei.ui.widget.TestPullLayout
        android:id="@+id/testPullLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cart_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            ptr:ptrAnimationStyle="flip" >

            <RelativeLayout
                android:id="@+id/product_detail_content_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/lll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_default_320" >

                            <fragment
                                android:id="@+id/product_detail_banner"
                                android:name="com.dongwukj.weiwei.ui.fragment.BannerFragment"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_default_320"
                                tools:layout="@layout/banner_view" />

                            <ImageButton
                                android:id="@+id/fragment_product_detail_back_button"
                                android:layout_width="@dimen/dp_default_60"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/dp_default_20"
                                android:background="@null"
                                android:src="@drawable/weiwei_back_button"
                                android:visibility="gone" />

                            <ImageButton
                                android:id="@+id/attention"
                                android:layout_width="@dimen/dp_default_50"
                                android:layout_height="@dimen/dp_default_60"
                                android:layout_alignParentBottom="true"
                                android:background="@null"
                                android:src="@drawable/weiwei_favorite_button"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_default_60" >

                                <TextView
                                    android:id="@+id/product_detail_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_default_50"
                                    android:background="#f0f0f0"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:lines="2"
                                    android:paddingLeft="@dimen/dp_default_15"
                                    android:text=""
                                    android:textColor="#333333"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:id="@+id/back"
                                    android:layout_width="80dp"
                                    android:layout_height="@dimen/dp_default_20"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/dp_default_10"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/buketuihuo" />

                                <TextView
                                    android:id="@+id/tv_fenxiang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/dp_default_10"
                                    android:gravity="center_vertical"
                                    android:text="分享"
                                    android:textColor="#7c7c7c"
                                    android:visibility="gone" />

                                <ImageButton
                                    android:id="@+id/shared"
                                    android:layout_width="@dimen/dp_default_50"
                                    android:layout_height="@dimen/dp_default_60"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@id/tv_fenxiang"
                                    android:background="@null"
                                    android:src="@drawable/fenxiang"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp_default_5"
                                android:background="@drawable/weiwei_base_text_bg"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_default_30"
                                    android:paddingLeft="@dimen/dp_default_10" >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal" >

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal" >

                                            <TextView
                                                android:id="@+id/tv_pricetype"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:text="价格："
                                                android:textColor="#7c7c7c" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:text="￥"
                                                android:textColor="@color/red"
                                                android:textSize="10sp" />

                                            <TextView
                                                android:id="@+id/product_detal_shopprice"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:text=""
                                                android:textColor="@color/red"
                                                android:textSize="20sp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/weight_unit"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:text="/份"
                                                android:textColor="#333333"
                                                android:textSize="@dimen/sp_default_12" />

                                            <TextView
                                                android:id="@+id/product_detail_marketprice"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="right"
                                                android:layout_marginLeft="@dimen/dp_default_20"
                                                android:gravity="center"
                                                android:text="原价：￥180.00/份"
                                                android:textColor="#7c7c7c"
                                                android:visibility="visible" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="3"
                                            android:visibility="gone" >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:text="规格："
                                                android:textColor="#7c7c7c" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="@dimen/dp_default_5"
                                                android:text="5斤装"
                                                android:textColor="#333333" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_speciality"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_default_10"
                                    android:layout_marginTop="@dimen/dp_default_10"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/dp_default_10" >

                                    <com.dongwukj.weiwei.ui.widget.MyGridView
                                        android:id="@+id/gd"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_default_5"
                                        android:cacheColorHint="#00000000"
                                        android:horizontalSpacing="@dimen/dp_default_3"
                                        android:listSelector="#00000000"
                                        android:numColumns="auto_fit"
                                        android:stretchMode="columnWidth"
                                        android:verticalSpacing="@dimen/dp_default_3"
                                        android:visibility="gone" >
                                    </com.dongwukj.weiwei.ui.widget.MyGridView>
                                </LinearLayout>

                                <View style="@style/WeiWeiContentBorderStyle" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="@dimen/dp_default_5"
                                    android:orientation="vertical"
                                    android:padding="@dimen/dp_default_10" >

                                    <TextView
                                        android:id="@+id/tv_weight"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text=""
                                        android:visibility="gone"
                                        android:textColor="#7c7c7c" />

                                    <TextView
                                        android:id="@+id/product_detail_salecountandship"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text=""
                                        android:textColor="#7c7c7c" />

                                    <TextView
                                        android:id="@+id/product_detail_stockNumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text=""
                                        android:textColor="#7c7c7c" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_default_5"
                        android:background="@drawable/weiwei_base_text_bg"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_default_10" >

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lineSpacingMultiplier="1.5"
                            android:paddingBottom="@dimen/dp_default_10"
                            android:paddingRight="@dimen/dp_default_10"
                            android:paddingTop="@dimen/dp_default_10"
                            android:textColor="#333333" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_default_5"
                        android:background="@drawable/weiwei_base_text_bg"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_default_10" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:text="商品介绍:"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <View style="@style/WeiWeiContentBorderStyle" />

                        <TextView
                            android:id="@+id/goodsdescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lineSpacingMultiplier="1.5"
                            android:paddingBottom="@dimen/dp_default_10"
                            android:paddingRight="@dimen/dp_default_10"
                            android:paddingTop="@dimen/dp_default_10"
                            android:textColor="#7c7c7c" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_default_60"
                        android:layout_marginBottom="@dimen/dp_default_10"
                        android:layout_marginTop="@dimen/dp_default_10"
                        android:background="@color/weiwei_content_background_color"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dp_default_10" >

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="运送：湖北省-武汉市-洪山区"
                                android:textSize="@dimen/sp_default_16" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:lines="1"
                                android:text="今天下单，预计明天上午12点前送达"
                                android:textColor="@color/gray_button_text_color"
                                android:textSize="@dimen/sp_default_12" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/bt_update"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_default_30"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/dp_default_5"
                            android:layout_marginRight="@dimen/dp_default_10"
                            android:layout_marginTop="@dimen/dp_default_5"
                            android:background="@drawable/weiwei_product_modify_address"
                            android:text="修改"
                            android:textColor="@color/weiwei_product_modify_address_color"
                            android:textSize="@dimen/sp_default_15"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_default_60"
                            android:background="@color/weiwei_content_background_color"
                            android:paddingLeft="@dimen/dp_default_10" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/weiwei_search_button" />

                            <TextView
                                android:id="@+id/product_detail_query_suyuan"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_default_10"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text="溯源查询"
                                android:textSize="@dimen/sp_default_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_default_15"
                                android:background="@drawable/weiwei_more"
                                android:gravity="center"
                                android:textColor="@color/lightgray" />
                        </LinearLayout>

                        <View
                            style="@style/WeiWeiContentBorderStyle"
                            android:layout_marginLeft="@dimen/dp_default_10" />

                        <LinearLayout
                            android:id="@+id/ll_evaluate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_default_60"
                            android:background="@color/weiwei_content_background_color"
                            android:paddingLeft="@dimen/dp_default_10" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/weiwei_icon7" />

                            <TextView
                                android:id="@+id/product_detail_comment_header"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_default_10"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text="商品评价(16700人评论90%好评)"
                                android:textSize="@dimen/sp_default_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_default_15"
                                android:background="@drawable/weiwei_more"
                                android:gravity="center"
                                android:textColor="@color/lightgray" />
                        </LinearLayout>

                        <View
                            style="@style/WeiWeiContentBorderStyle"
                            android:layout_marginLeft="@dimen/dp_default_10" />

                        <com.dongwukj.weiwei.ui.widget.SubListView
                            android:id="@+id/product_detail_comment_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="40dp"
                            android:divider="@color/weiwei_content_item_divider_color"
                            android:dividerHeight="@dimen/dp_default_1"
                            android:scrollbars="none"
                            android:visibility="gone" >
                        </com.dongwukj.weiwei.ui.widget.SubListView>
                    </LinearLayout>
                </LinearLayout>

                <com.dongwukj.weiwei.ui.widget.DetailScrollBottomIndicator
                    android:id="@+id/bottom_indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/lll"
                    android:layout_marginTop="@dimen/dp_default_10"
                    android:gravity="center_vertical"
                    android:visibility="visible" />
            </RelativeLayout>
        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

        <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/detailView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            ptr:ptrAnimationStyle="flip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_default_20"
                android:orientation="vertical" >

                <com.dongwukj.weiwei.ui.widget.DetailScrollTopIndicator
                    android:id="@+id/top_indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_header_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_default_20"
                    android:gravity="top|center"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <RadioGroup
                                android:id="@+id/tabs_rg"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_default_60"
                                android:layout_marginBottom="@dimen/dp_default_20"
                                android:layout_marginTop="@dimen/dp_default_10"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/dp_default_7"
                                android:paddingTop="@dimen/dp_default_7" >

                                <RadioButton
                                    android:id="@+id/tab_rb_a"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.0"
                                    android:background="#8fc31f"
                                    android:button="@null"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="图文详情"
                                    android:textColor="@color/message_title_radio_text_color"
                                    android:textSize="@dimen/sp_default_13" />

                                <RadioButton
                                    android:id="@+id/tab_rb_b"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.0"
                                    android:background="@drawable/red_tab_seletor"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="规格参数"
                                    android:textColor="@color/message_title_radio_text_color"
                                    android:textSize="@dimen/sp_default_13"
                                    android:visibility="gone" />
                            </RadioGroup>
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dp_default_1"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dp_default_3"
                            android:layout_marginTop="@dimen/dp_default_3"
                            android:background="@color/weiwei_content_item_divider_color" />
                    </RelativeLayout>

                    <FrameLayout
                        android:id="@+id/product_detail_tab_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
    </com.dongwukj.weiwei.ui.widget.TestPullLayout>

</RelativeLayout>